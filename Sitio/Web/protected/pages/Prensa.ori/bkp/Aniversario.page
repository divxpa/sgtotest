			<com:TBoundColumn DataField="Monto" HeaderText="Monto Obra" DataFormatString="#number_format({0},2,',','.')" ItemStyle.HorizontalAlign="Right" ItemStyle.VerticalAlign="Top" ItemStyle.CustomStyle="width: 50px; min-width: 50px; max-width: 50px; word-wrap: break-word; text-wrap: unrestricted"/>
			<com:TBoundColumn DataField="PorcentajeAvance" HeaderText="% Certif." DataFormatString="#number_format({0},2,',','.')" ItemStyle.HorizontalAlign="Right" ItemStyle.VerticalAlign="Top" ItemStyle.CustomStyle="width: 50px; min-width: 50px; max-width: 50px; word-wrap: break-word; text-wrap: unrestricted"/>
			<com:TBoundColumn DataField="FechaFinalizacion" HeaderText="F.Fin." ItemStyle.HorizontalAlign="Center" ItemStyle.VerticalAlign="Top" ItemStyle.CustomStyle="width: 50px; min-width: 50px; max-width: 50px; word-wrap: break-word; text-wrap: unrestricted"/>
			<com:TBoundColumn DataField="Estado" HeaderText="Estado" ItemStyle.VerticalAlign="Top" ItemStyle.CustomStyle="width: 50px; min-width: 50px; max-width: 50px; word-wrap: break-word; text-wrap: unrestricted"/>

	  	</com:TActiveDataGrid>
	</div>
