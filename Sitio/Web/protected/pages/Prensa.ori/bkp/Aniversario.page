	        AllowSorting="false"
	        ShowHeader="false">
			
			<com:TBoundColumn DataField="Organismo" HeaderText="Organismo" ItemStyle.VerticalAlign="Top" ItemStyle.CustomStyle="width: 58px; min-width: 58px; max-width: 58px; word-wrap: break-word; text-wrap: unrestricted"/>
